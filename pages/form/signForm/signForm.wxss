#panel{
  /*height:65vh;*/
  width: 90%;
  padding: 60rpx 5% 0 5%;
  background:#fff;
}

#panel text{
  display: inline-block;
  border: 1rpx #ddd solid;
  text-align: center
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 1;
}