page{
  background: #eee
}
.background{
  background: #fff
}
.form > view{
  width: 50%;
  padding: 80rpx 0;
  display: inline-block;
  text-align: center;
  box-sizing: border-box
}
.form view text{
  display: block
}
.form view image{
  width: 80rpx;
  height: 80rpx
}
.form > view:nth-child(odd){
  border: 1rpx #ccc solid;
  border-top: none;
  border-left: none
} 
.form > view:nth-child(even){
  border-bottom: 1rpx #ccc solid;
} 