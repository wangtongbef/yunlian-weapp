/* pages/Inventory/inventoryStoreDetail/inventoryStoreDetail.wxss */
page{
  background-color: #fff
}
.title{
  width:100%;
  height:156rpx;
  line-height: 156rpx;
  font-size: 36rpx;
  color:rgb(42, 41, 41);
  text-align: center;
}
.gray{
  width: 100%;
  height: 20rpx;
  background-color: rgb(248, 248, 248)
}
.detail_tab{
  width:calc(100% -80rpx);
  height:112rpx;
  margin:20rpx 40rpx 55rpx 40rpx;
  border-bottom: 2rpx solid rgb(204, 204, 204);
  display:flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx
}
.normal{
  margin-right: 90rpx;
}
.probl{
  margin-left:90rpx;
}
.choose{
  color:rgb(1,144,210)
}
.nochoose{
  color:rgb(122,122,122)
}
.productsDetail{
  width:calc(100% - 80rpx);
  height:36rpx;
  margin:40rpx 40rpx 0;
  text-align: bottom;
  display:flex;
  justify-content: flex-end;
  align-items: flex-end
}
.productName{
  width: 320rpx;
  font-size: 28rpx;
  color: rgb(88, 88, 88);
  height: 28rpx
}
.productAmount,.productMeasure{
  text-align: right;
  color: rgb(42, 41, 41);
}
.productAmount{
  width: 320rpx;
  font-size: 36rpx;
  height: 36rpx
}
.productMeasure{
  width: 30rpx;
  font-size: 20rpx;
  height: 20rpx
}
.nodata{
  margin-top: 250rpx;
  width:100%;
  text-align: center;
  font-size: 28rpx;
  color:rgb(167,167,167);
}