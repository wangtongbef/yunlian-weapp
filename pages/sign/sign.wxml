<!--pages/sign/sign.wxml-->

<view class="swiper-tab">
    <view class="{{currentTab==0 ? 'active' : ''}}" data-current="0" bindtap="swichNav">
        <image src="{{currentTab==0 ? '../../img/icon-signActive.svg' : '../../img/icon-sign.svg'}}"></image>
        签约
    </view>
    <view class="{{currentTab==1 ? 'active' : ''}}" data-current="1" bindtap="swichNav">
        <image src="{{currentTab==1 ? '../../img/icon-signedActive.svg' : '../../img/icon-signed.svg'}}"></image>  
        签约记录
    </view>
</view>

<!--签约-->
<view class="swiper-item" hidden="{{!isShow}}">
  <view hidden='{{!flag}}'>
    <text class='width'>选择签约的门店</text>
    <view class='background'>
        <block wx:for='{{storeList}}'>
            <view class='list' bindtap='changeStore' data-id='{{index}}'>
                <text>{{item.name}}</text>
                <image src='../../img/icon-arrowRG.png'></image>
            </view>
        </block>
    </view>
  </view>
  <view hidden='{{flag}}'>
    <view class='background'>
        <view class='storeInfo'>签约门店:西丽天虹店</view>
        <view class='photoInfo'>
            <view wx:if='{{imgList.length == 0}}'>
              <image src='../../img/photograph.svg' class='photoBtn' bindtap='photo'></image>
              <em>*</em>
              <text>点击上传合同照片</text>
            </view> 
            <image wx:if='{{imgList.length !== 0}}' src='{{imgList}}' data-src="{{imgList}}" class='photo' bindtap='photograph'></image>         
        </view>
        
    </view> 
    <view class='signBtn'>
      <button>签约</button>
    </view> 
  </view>
</view>

<!--签约记录-->
<view class="swiper-item signed" hidden="{{isShow}}">
    <block wx:for='{{signedList}}'>
      <view class='signedInfo background'>
          <text class='signedTime width'>时间:{{item.time}}</text>
          <image src='{{item.img}}' data-id='{{index}}' bindtap='signedImg' data-img='{{item.img}}'></image>
          <text class='width'>签约门店:{{item.name}}</text>
      </view>       
    </block> 
    <view wx:if='{{signedList.length == 0}}' class='nodata'>
        <image src='../../img/nodata.svg'></image>
        <text>暂无签约记录</text>
    </view>  
</view>