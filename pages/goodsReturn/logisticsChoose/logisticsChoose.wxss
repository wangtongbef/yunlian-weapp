/* pages/goodsSend/logisticsChoose/logisticsChoose.wxss */
page{
  background-color: rgb(248,248,248);
  height:100%
}
.top{
  height:274rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 4px 8px rgba(3, 40, 109, 0.2);
  position:relative;
}
.title{
  font-size: 32rpx;
  color:rgb(88,88,88);
  position:absolute;
  top:60rpx;
  left:40rpx;
}
.number{
  position:absolute;
  height:72rpx;
  width:100%;
  line-height: 72rpx;
  text-align: center;
  border-bottom: 2rpx solid rgb(167,167,167);
  font-size: 40rpx;
  color:rgb(42,41,41);
}
.pl{
  font-size: 32rpx;
  color:rgb(167,167,167);
}
.logisticslist{
  height: calc(100% - 429rpx);
  margin-top:35rpx;
  background-color: #fff
}
.logisticscell{
  width:590rpx;
  margin-left:calc(50% - 295rpx);
  height:123rpx;
  line-height: 128rpx;
  border-bottom: 2rpx solid rgb(238,238,238);
  display: flex;
  justify-content: space-between;
}
.logisticscell text{
  font-size: 32rpx;
}
.logisticscell image{
  margin-top:40rpx;
  width: 48rpx;
  height:48rpx
}
.confirm{
  width: 100%;
  height:120rpx;
  position: fixed;
  bottom: 0;
  background-color: rgb(1,144,210);
  text-align: center;
  line-height: 120rpx;
  color: #fff;
  font-size: 40rpx;
}
.mask{
  width: 100%;
  height:100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
  left: 0
}
.mask text{
  color:#fff;
  font-size: 32rpx;
}