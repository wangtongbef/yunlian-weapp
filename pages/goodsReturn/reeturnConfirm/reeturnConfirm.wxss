/* pages/goodsReturn/reeturnConfirm/reeturnConfirm.wxss */
page{
  background-color: rgb(238,238,238);
  margin-top:0;
  height:100%
}
.scantop{
  width:100%;
  height:440rpx;
  box-shadow: 0 4px 8px rgba(7, 17, 111, 0.2);
  background-color:#fff;
  margin-top:0;
  position: relative
}
.scantop view{
  width:100%;
  text-align: center
}
.numTitle{
  font-size:30rpx;
  color:rgb(122,122,122);
  position: absolute;
  top:155rpx;
  height:30rpx;
  line-height:30rpx
}
.numContent{
  letter-spacing:5px;
  font-size:52rpx;
  color:rgb(88,88,88);
  position: absolute;
  top:245rpx;
  height:52rpx;
  line-height:52rpx
}
.notValid{
  position: absolute;
  top:205rpx;
  font-size: 32rpx;
  color: rgb(88,88,88);
  height:32rpx;
  line-height:32rpx
}
.button{
  width:640rpx;
  height:100rpx;
  margin:160rpx 55rpx 0 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.button view{
  width:280rpx;
  height:100rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size:40rpx;
}
.mask{
  width: 100%;
  height:100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
  left: 0
}
.mask text{
  color:#fff;
  font-size: 30rpx;
}